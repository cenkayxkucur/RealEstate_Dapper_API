@model UpdateBottomGridDto
@{
    ViewData["Title"] = "UpdateBottomGrid";
    Layout = "~/Views/Admin/Index.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Öne Çıkan Alanlar Güncelleme Sayfası</h6>
                <form method="post">
                    <input type="hidden" asp-for="BottomGridID" />
                    <label>Başlık</label>
                    <input type="text" asp-for="Title" class="form-control" />
                    <br />
                    <label>İkon</label>
                    <input type="text" asp-for="Icon" class="form-control" />
                    <br />
                    <label>İçerik</label>
                    <textarea rows="5" asp-for="Description" class="form-control"></textarea>
                    <br />
                    <button class="btn btn-success">Bilgileri Güncelle</button>
                </form>
            </div>
        </div>
    </div>
</div>